<body>
    <div id="admin">
        <div class="row">
            <div class="col-lg-2 menu">
                <h3 class="menu-heading">Menu Admin</h3>
                <ul class="menu-list">
                    <li class="menu-list__item">
                        <a href="/" class="menu-list__item-link">
                            <i class="menu-icon fa-solid fa-house"></i>
                            <p>Trang chủ</p>
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a href="/admin/account?page=1" class="menu-list__item-link">
                            <i class="menu-icon fa-solid fa-user"></i>
                            <p>Tài khoản</p>
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a href="/admin/warehouse?page=1" class="menu-list__item-link">
                            <i class="menu-icon fa-solid fa-warehouse"></i>
                            <p>Nhà kho</p>
                        </a>
                    </li>
                    <li class="menu-list__item">
                        <a href="/admin/feedback?page=1" class="menu-list__item-link">
                            <i class="fa-solid fa-envelope"></i>
                            <p>Feedbacks</p>
                        </a>
                    </li>
                </ul>
            </div>
            <form class="col-lg-10 content" name="container-form" method="GET" class="mt-4" 
                action="/admin/account/trash/search">
                <div class="admin-heading">
                    <h1 class="admin-content-heading">
                        Quản lí tài khoản
                    </h1>
                    <h1 class="admin-name-heading">
                        {{name}}
                    </h1>
                </div>
                <div class="admin-table">
                <div class="admin-table__options">
                    <div class="admin-table__options-search-wrap mt-3 mb-3">
                        <i class="fa-solid fa-magnifying-glass admin-table__options-search-icon"> </i>
                        <input type="text" name="search" class="admin-table__options-search" placeholder="Tìm kiếm theo tên ...">
                    </div>
                
                    <a class="btn-table" href="/admin/account/trash">
                        <i class="fa-solid fa-arrow-rotate-right"></i>
                        Reset
                    </a>
                    {{!-- <select name="filter" class="form-select" aria-label="Default select example">
                        <option selected> Filter </option>
                        <option value="name">Name</option>
                        <option value="email">Email</option>
                        <option value="phone">Phone</option>
                        <option value="username">User Name</option>
                        <option value="password">Pass Word</option>
                    </select> --}}
                    <button type="submit" class="btn-table filter-btn">
                        <i class="fa-solid fa-floppy-disk"></i>
                        Save
                    </button>
                </div>
                    <a class="text-link" href="/admin/account/">
                        <i class="fa-solid fa-left-long"></i> Quay lại
                    </a>
                    <table class="table table-hover">
                        <thead>
                            <tr class="d-flex">
                                <th class="col-1" scope="col">#</th>
                                <th class="col-2" scope="col">Name</th>
                                <th class="col-3" scope="col">Email</th>
                                <th class="col-1" scope="col">Phone</th>
                                <th class="col-2" scope="col">User Name</th>
                                <th class="col-2" scope="col">Pass Word</th>
                                <th class="col-2" scope="col" colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each accounts}}
                            <tr class="d-flex">
                                <td class="col-1" cope="row">{{sum @index 1}}</td>
                                <td class="col-2">{{this.name}}</td>
                                <td class="col-3">{{this.email}}</td>
                                <td class="col-1">{{this.phone}}</td>
                                <td class="col-2">{{this.username}}</td>
                                <td class="col-1">{{this.password}}</td>
                                <td class="col-2">
                                    <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}"> 
                                        <i class="fa-solid fa-window-restore"></i>
                                    </a>
                                    <a href="" class="btn btn-link btn-delete" data-id="{{this._id}}" data-bs-toggle="modal"
                                        data-bs-target="#deleteCourseModal">
                                        <i class="fa-solid fa-xmark"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/each }}
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>

    {{!-- Confirm Delete --}}
    <div id="deleteCourseModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa khóa học ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa khóa học không.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy xóa</button>
                    <button id="btn-delete-course" type="button" class="btn btn-danger">Xác nhận xóa</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- Delete Restore Hidden Form --}}
    <form method="POST" name="delete-course-form"></form>
    <form method="POST" name="restore-course-form"></form>


    <!-- Link Owlcaroulsel -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
        integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
        integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Link Bootrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script>

    {{!-- Owl --}}
    <script>
        $('#home .gallery .owl-carousel.owl-carousel--gallery').owlCarousel({
            loop: true,
            autoplay: true,
            autoplayTimeout: 6000,
            responsive: {
                0: {
                    items: 2
                },
                740: {
                    items: 3
                },
                1024: {
                    items: 5
                }
            }
        })
        $('#home .drink-list .owl-carousel').owlCarousel({
            loop: true,
            autoplay: false,
            autoplayTimeout: 6000,
            responsive: {
                0: {
                    items: 2
                },
                740: {
                    items: 2
                },
                1024: {
                    items: 4
                }
            }
        })
        $('#home .category .owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            autoplay: true,
            autoplayTimeout: 6000,
            dotsEach: true,
            URLhashListener: true,
            center: true,
            startPosition: 'URLHash',
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 3
                }
            }
        })
        $('#menu .owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 2
                },
                600: {
                    items: 3
                },
                1000: {
