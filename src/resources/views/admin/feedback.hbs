<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tea House | Trang chủ</title>
    <!-- Link Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/favi.png">
    <!-- Link Bootrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- Link OwlCarousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
        integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
        integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link Font AweSome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link Normalize Css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
        integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link CSS -->
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="adminBeauty">
        <div class="row">
            <div class="col-lg-3 pr-0">
                <div class="admin-menu">
                    <div class="admin-logo">
                        <a href="/">
                            <img src="/img/main-logo.png" alt="" class="admin-logo-img">
                        </a>
                    </div>
                    <ul class="admin-menu__list">
                        <li class="admin-menu__list-item ">
                            <i class="fa-solid fa-chart-simple"></i>
                            <a href="/admin/dashboard" class="admin-menu__list-item-anchor">Dashboard</a>
                        </li>
                        <li class="admin-menu__list-item ">
                            <i class="fa-solid fa-user"></i>
                            <a href="/admin/account?page=1" class="admin-menu__list-item-anchor">Tài khoản</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-warehouse"></i>
                            <a href="/admin/warehouse?page=1" class="admin-menu__list-item-anchor">Nhà kho</a>
                        </li>
                        <li class="admin-menu__list-item admin-menu__list-item--active">
                            <i class="fa-solid fa-envelope"></i>
                            <a href="/admin/feedback?page=1" class="admin-menu__list-item-anchor">Feedbacks</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-comments"></i>
                            <a href="/admin/comment?page=1" class="admin-menu__list-item-anchor">Comments</a>
                        </li> 
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <a href="/admin/order?page=1" class="admin-menu__list-item-anchor">Đơn hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 pl-0">
                <form class="admin-main" method="GET" class="mt-4" action="/admin/feedback/search">
                    <div class="admin-main__header">
                        <div class="row">
                            <div class="col-lg-2 admin__title">
                                <h1 class="admin__title-text">Feedbacks</h1>
                            </div>
                            <div class="col-lg-7 admin-table__options">
                                <div class="admin-table__options-search-wrap">
                                    <i class="fa-solid fa-magnifying-glass admin-table__options-search-icon"> </i>
                                    <input type="text" name="search" class="admin-table__options-search"
                                        placeholder="Tìm kiếm ...">
                                </div>
                                <a class="btn-table" href="/admin/account">
                                    <i class="fa-solid fa-arrow-rotate-right"></i>
                                </a>
                                <button type="submit" class="btn-table filter-btn">
                                    <i class="fa-solid fa-floppy-disk"></i>
                                </button>
                            </div>
                            <div class="col-lg-3">
                                <div class="admin-infor">
                                    <div class="admin-infor__img-wrap">
                                        <img src="{{avatar}}" alt="" class="admin-infor__img">
                                    </div>
                                    <div class="admin-infor__detail">
                                        <h3 class="admin-infor__name">{{name}}</h3>
                                        <p class="admin-infor__level">Admin</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="admin-main__body">
                        <a class="text-link" href="/admin/feedback/trash">
                            <i class="fa-solid fa-trash"></i> ({{deletedCount}})
                        </a>
                        <table class="table admin-main__body-table table-hover mt-3">
                            <thead>
                                <tr class="d-flex">
                                    <th class="col-2" scope="col">Name</th>
                                    <th class="col-3" scope="col">Email</th>
                                    <th class="col-2" scope="col">Phone</th>
                                    <th class="col-4" scope="col">Content</th>
                                    <th class="col-2" scope="col" colspan="2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each feedbacks}}
                                <tr class="d-flex">
                                    <td class="table-data col-2">{{this.fullname}}</td>
                                    <td class="table-data col-3">{{this.email}}</td>
                                    <td class="table-data col-2">{{this.phone}}</td>
                                    <td class="table-data col-4">{{this.content}}</td>
                                    <td class="col-2">
                                        <a href="/admin/feedback/{{this._id}}/edit" class="btn btn-link">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a href="" class="btn btn-link" data-id="{{this._id}}" data-bs-toggle="modal"
                                            data-bs-target="#deleteModal">
                                            <i class="fa-solid fa-xmark"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="5" class="text-center">
                                        Bảng không có dữ liệu
                                    </td>
                                </tr>
                                {{/each }}
                            </tbody>
                        </table> 
                        <p style="display: none;" class="sumary-page">{{tongSoPage}}</p>
                        <div class="menu-main__pagination">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item ">
                                        <a class="page-link" onclick="previousPage()" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    {{#times tongSoPage}}
                                    <li class="page-item">
                                        {{!-- --}}
                                        <a class="page-link page-link--number" href="?page={{sum this 1}}">
                                            {{sum this 1}}
                                        </a>
                                    </li>
                                    {{/times}}

                                    <li class="page-item">
                                        <a class="page-link" onclick="nextPage()" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{!-- Confirm Delete --}}
    <div id="deleteModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa feedback này ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa feedback này không?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy xóa</button>
                    <button id="btn-delete" type="button" class="btn btn-danger">Xác nhận xóa</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- Delete Hidden Form --}}
    <form method="POST" name="delete-form"></form>
    <!-- Link JQuerry -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
        integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Link Bootrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script> 
    {{!-- Delete Handle --}}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteForm = document.forms['delete-form'];
            var containerForm = document.forms['container-form'];
            var btnDelete = document.getElementById('btn-delete');
            // When Dialog Confirm Show 
            $('#deleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                feedbackId = button.data('id');
            });
            // When delete Course btn clicked
            btnDelete.onclick = function () {
                deleteForm.action = '/admin/feedback/' + feedbackId + '?_method=DELETE';
                deleteForm.submit();
            }
        })  
    </script> 
    {{!-- Pagination --}}
    <script>
        const urlSearchParams = new URLSearchParams(window.location.search);
        const params = Object.fromEntries(urlSearchParams.entries());
        const sumaryPage = Number(document.querySelector('.sumary-page').innerText) 
        let currentPage = parseInt(params.page);
        function nextPage() {
            var nextPage = currentPage + 1
            if (nextPage > sumaryPage) {
                nextPage = sumaryPage
            }
            location.href = `/admin/feedback?page=${nextPage}`;
        }
        function previousPage() {
            var previousPage = currentPage - 1
            if (previousPage < 1) {
                previousPage = 1
            }
            location.href = `/admin/feedback?page=${previousPage}`;
        }
        var list = document.querySelectorAll('.page-link--number')

        document.querySelectorAll('.page-link--number')[currentPage - 1].classList.add('page-link--actived')
    </script>
</body>
</html>