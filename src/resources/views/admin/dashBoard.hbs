<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tea House | Trang chủ</title>
    {{!-- Link ChartJS --}} 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"
        integrity="sha512-ElRFoEQdI5Ht6kZvyzXhYG9NqjtkmlkfYk0wr6wHxU9JEHakS7UJZNeml5ALk+8IKlU6jDgMabC3vkumRokgJA=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Link Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/favi.png"> 
    <!-- Link Bootrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- Link OwlCarousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
        integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
        integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link Font AweSome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
        integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link Normalize Css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css"
        integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Link CSS -->
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="adminBeauty">
        <div class="row">
            <div class="col-lg-3 pr-0">
                <div class="admin-menu">
                    <div class="admin-logo">
                        <a href="/">
                            <img src="/img/main-logo.png" alt="" class="admin-logo-img">
                        </a>
                    </div>
                    <ul class="admin-menu__list">
                        <li class="admin-menu__list-item admin-menu__list-item--active">
                            <i class="fa-solid fa-chart-simple"></i>
                            <a href="/admin/dashboard" class="admin-menu__list-item-anchor">Dashboard</a>
                        </li>
                        <li class="admin-menu__list-item ">
                            <i class="fa-solid fa-user"></i>
                            <a href="/admin/account?page=1" class="admin-menu__list-item-anchor">Tài khoản</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-warehouse"></i>
                            <a href="/admin/warehouse?page=1" class="admin-menu__list-item-anchor">Nhà kho</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-envelope"></i>
                            <a href="/admin/feedback?page=1" class="admin-menu__list-item-anchor">Feedbacks</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-comments"></i>
                            <a href="/admin/comment?page=1" class="admin-menu__list-item-anchor">Comments</a>
                        </li> 
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <a href="/admin/order?page=1" class="admin-menu__list-item-anchor">Đơn hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 pl-0">
                <form class="admin-main" method="GET" class="mt-4" action="/admin/account/search">
                    <div class="admin-main__header">
                        <div class="row">
                            <div class="col-lg-9 admin__title">
                                <h1 class="admin__title-text">Dashboard</h1>
                            </div>
                            <div class="col-lg-3"> 
                                <div class="admin-infor">
                                    <div class="admin-infor__img-wrap">
                                        <img src="{{avatar}}" alt="" class="admin-infor__img">
                                    </div>
                                    <div class="admin-infor__detail">
                                        <h3 class="admin-infor__name">{{name}}</h3>
                                        <p class="admin-infor__level">Admin</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="admin-main__body"> 
                        <div class="admin-card-infor"> 
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p class="admin-card__number">{{numberAccount}}</p>
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Account quantity</p>
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-users"></i>
                                </div>
                            </div>
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p class="admin-card__number">{{numberProduct}}</p>
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Product quantity</p>
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-warehouse"></i>
                                </div>
                            </div> 
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p class="admin-card__number">{{numberFeedback}}</p>
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Feedback quantity</p>
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-envelope"></i>
                                </div>
                            </div>
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p class="admin-card__number">{{numberComment}}</p>
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Comment quantity</p>
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-comments"></i>
                                </div>
                            </div>
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p class="admin-card__number">{{numberOrder}}</p> 
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Order quantity</p> 
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-file-invoice"></i>
                                </div>
                            </div>
                            <div class="admin-card">
                                <div class="admin-card-detail">
                                    <div class="admin-card__number-wrap">
                                        <p style="display: none;" class="order-sumary-hidden admin-card__number">{{sumaryOrder}}</p>  
                                        <p style="font-size: 32px; margin-bottom: 0;" class="order-sumary-text admin-card__number--text">{{sumaryOrder}}</p>  
                                    </div>
                                    <div class="admin-card__name-wrap">
                                        <p class="admin-card__name">Sumary Order</p> 
                                    </div>
                                </div>
                                <div class="admin-card__icon">
                                    <i class="fa-solid fa-money-check-dollar"></i>
                                </div>
                            </div>
                        </div> 
                        <div class="admin-chart mt-5">
                            <div class="container">
                                <div class="row">
                                    <div class="col-4"> 
                                        <h3 class="chart-tra-hoa-qua">Chart sản phẩm</h3>
                                        <canvas id="myChartPie"> </canvas> 
                                        <p style="display: none;" class="quantity__tra-hoa-qua">{{quantityTraHoaQua}}</p>
                                        <p style="display: none;" class="quantity__ca-phe">{{quantityCaPhe}}</p>
                                        <p style="display: none;" class="quantity__smoothies">{{quantitySmoothies}}</p>
                                        <p style="display: none;" class="quantity__banh-ngot">{{quantityBanhngot}}</p>
                                    </div> 
                                    <div class="col-lg-8">
                                        <h3 class="chart-tra-hoa-qua">
                                            DashBoard Order
                                        </h3>  
                                        <canvas id="myChartBar"> </canvas>  
                                        <p style="display: none;" class="labelOrderText">{{resultLabels}}</p>
                                        <p style="display: none;" class="dataOrderText">{{resultData}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {{!-- Confirm Delete --}}
    <div id="deleteCourseModal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa tài khoản ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa tài khoản này không.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy xóa</button>
                    <button id="btn-delete-course" type="button" class="btn btn-danger">Xác nhận xóa</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- ChartJS --}}
    <script>  
        var quantityTraHoaQua = Number(document.querySelector('.quantity__tra-hoa-qua').innerText) 
        var quantitySmoothies = Number(document.querySelector('.quantity__smoothies').innerText) 
        var quantityBanhNgot = Number(document.querySelector('.quantity__banh-ngot').innerText) 
        var quantityCaPhe = Number(document.querySelector('.quantity__ca-phe').innerText)  
        // Chart Pie 
        let myChartPie = document.getElementById('myChartPie').getContext('2d'); 
        let massPopChart = new Chart(myChartPie, {
                        type: 'pie',
                        data: {
                        labels: [
                            'Trà hoa quả',
                            'Cà phê',
                            'Smoothies',
                            'Bánh ngọt',
                        ],
                        datasets: [{
                            label: 'Product Dataset',
                            data: [quantityTraHoaQua, quantityCaPhe, quantitySmoothies, quantityBanhNgot],
                            backgroundColor: [
                                'rgb(255, 99, 132)',
                                'rgb(54, 162, 235)',
                                'rgb(255, 205, 86)',
                                'rgb(49,173,116)'
                            ],
                            hoverOffset: 4,  
                        }]
                    },
                }) 
        // Chart Bar   
        var dataOrderText = document.querySelector('.dataOrderText').innerText
        var labelOrderText = document.querySelector('.labelOrderText').innerText 

        var dataOrderList = dataOrderText.split(",");
        var labelOrderText = labelOrderText.split(",");  
        
        let myChartBar = document.getElementById('myChartBar').getContext('2d');  
        let massPopChartBar = new Chart(myChartBar, {
                type: 'bar',
                data: {
                    labels: labelOrderText,
                    datasets: [{
                        label: 'Product Sumary',
                        data: dataOrderList,
                        backgroundColor: [
                            'rgb(49, 173 ,116)',
                            'rgb(49, 173 ,116)',
                            'rgb(49, 173 ,116)',
                            'rgb(49, 173 ,116)'
                        ],
                        hoverOffset: 4,
                    }]
                }, 
                options: {
                    scales: {
                        y: { 
                            beginAtZero: true
                        }
                    }
                }
            }) 
    </script> 
    {{!-- Format Number --}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>
    <script>
        var sumary = document.querySelector('.order-sumary-hidden').innerText
        var sumaryNumber = Number.parseInt(sumary)
        var sumaryFormat = numeral(sumaryNumber);
        var sumaryStringFormat = String(sumaryFormat.format('0,0')) + " đ";
        document.querySelector('.order-sumary-text').innerText = sumaryStringFormat  
    </script>
</body> 

</html>