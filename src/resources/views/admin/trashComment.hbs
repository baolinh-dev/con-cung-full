<body>
    <div id="adminBeauty">
        <div class="row">
            <div class="col-lg-3 pr-0">
                <div class="admin-menu">
                    <div class="admin-logo">
                        <a href="/">
                            <img src="/img/main-logo.png" alt="" class="admin-logo-img">
                        </a>
                    </div>
                    <ul class="admin-menu__list">
                        <li class="admin-menu__list-item ">
                            <i class="fa-solid fa-chart-simple"></i>
                            <a href="/admin/dashboard" class="admin-menu__list-item-anchor">Dashboard</a>
                        </li>
                        <li class="admin-menu__list-item ">
