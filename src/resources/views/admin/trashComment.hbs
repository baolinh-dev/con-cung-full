<body>
<div id="admin">
    <div class="row">
        <div class="col-lg-2 menu">
            <h3 class="menu-heading">Menu Admin</h3>
            <ul class="menu-list">
                <li class="menu-list__item">
                    <a href="/" class="menu-list__item-link">
                        <i class="menu-icon fa-solid fa-house"></i>
                        <p>Trang chủ</p>
                    </a>
                </li>
                <li class="menu-list__item">
                    <a href="/admin/account?page=1" class="menu-list__item-link">
                        <i class="menu-icon fa-solid fa-user"></i>
                        <p>Tài khoản</p>
                    </a>
                </li>
                <li class="menu-list__item">
                    <a href="/admin/warehouse?page=1" class="menu-list__item-link">
                        <i class="menu-icon fa-solid fa-warehouse"></i>
                        <p>Nhà kho</p>
                    </a>
                </li>
                <li class="menu-list__item">
                    <a href="/admin/feedback" class="menu-list__item-link">
                        <i class="fa-solid fa-envelope"></i>
                        <p>Feedbacks</p>
                    </a>
                </li> 
                <li class="menu-list__item">
                    <a href="/admin/comment?page=1" class="menu-list__item-link">
                        <i class="fa-solid fa-comment"></i>
                        <p>Comments</p>
                    </a>
                </li>
            </ul>
        </div>
        <form class="col-lg-10 content" name="container-form" method="GET" class="mt-4" 
                action="/admin/feedback/trash/search">
            <div class="admin-heading">
                <h1 class="admin-content-heading">
                    Quản lí comments
                </h1>
                <div class="admin-infor">
                    <img style="border-radius: 50%; margin-right: 8px" width="32" src="{{avatar}}" alt="">
                    <h1 class="admin-name-heading">
                        {{name}}
                    </h1>
                </div>
            </div>
            <div class="admin-table">
                <div class="admin-table__options">
                    <div class="admin-table__options-search-wrap mt-3 mb-3">
                        <i class="fa-solid fa-magnifying-glass admin-table__options-search-icon"> </i>
                        <input placeholder="Tìm kiếm ..." name="search" type="text" class="admin-table__options-search">
                    </div>
                    <a class="btn-table" href="/admin/feedback/search">
                        <i class="fa-solid fa-arrow-rotate-right"></i>
                        Reset
                    </a>
                    <button type="submit" class="btn-table filter-btn">
                        <i class="fa-solid fa-floppy-disk"></i>
                        Save
                    </button>
                </div>
                <a class="text-link" href="/admin/comment">
                    <i class="fa-solid fa-left-long"></i> Quay lại
                </a>
                <table class="table table-hover">
                    <thead>
                        <tr class="d-flex">
                            <th class="col-2" scope="col">Name</th>
                            <th class="col-4" scope="col">Avatar</th>
                            <th class="col-4" scope="col">Comment</th>
                        </tr>
                    </thead>
                    <tbody>  
                        {{#each comments}}
                        <tr class="d-flex">
                            <td class="col-2">{{this.name}}</td>
                            <td class="col-4">{{this.avatar}}</td>
                            <td class="col-4">{{this.comment}}</td>
                            <td class="col-2">
                                <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">
                                    <i class="fa-solid fa-window-restore"></i>
                                </a>
                                <a href="" class="btn btn-link" data-id="{{this._id}}" data-bs-toggle="modal" data-bs-target="#deleteCourseModal">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            </td>
                        </tr>  
                        {{/each }}
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div> 

{{!-- Confirm Delete --}}
<div id="deleteCourseModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa sản phẩm này ?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa sản phẩm này không?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy xóa</button>
                <button id="btn-delete-course" type="button" class="btn btn-danger">Xác nhận xóa</button>
            </div>
        </div>
    </div>
</div>
