                            <a href="/admin/comment?page=1" class="admin-menu__list-item-anchor">Tài khoản</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-warehouse"></i>
                            <a href="/admin/warehouse?page=1" class="admin-menu__list-item-anchor">Nhà kho</a>
                        </li>
                        <li class="admin-menu__list-item">
                            <i class="fa-solid fa-envelope"></i>
                            <a href="/admin/feedback?page=1" class="admin-menu__list-item-anchor">Feedbacks</a>
                        </li>
                        <li class="admin-menu__list-item admin-menu__list-item--active">
                            <i class="fa-solid fa-comments "></i>
                            <a href="/admin/comment?page=1" class="admin-menu__list-item-anchor">Comments</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 pl-0">
                <form class="admin-main" method="GET" class="mt-4" action="/admin/comment/trash/search">
                    <div class="admin-main__header">
                        <div class="row">
                            <div class="col-lg-2 admin__title">
                                <h1 class="admin__title-text">Comments</h1>
                            </div>
                            <div class="col-lg-7 admin-table__options">
                                <div class="admin-table__options-search-wrap">
                                    <i class="fa-solid fa-magnifying-glass admin-table__options-search-icon"> </i>
                                    <input type="text" name="search" class="admin-table__options-search"
                                        placeholder="Tìm kiếm ...">
                                </div>
                                <a class="btn-table" href="/admin/comment">
                                    <i class="fa-solid fa-arrow-rotate-right"></i>
                                </a>
                                <button type="submit" class="btn-table filter-btn">
                                    <i class="fa-solid fa-floppy-disk"></i>
                                </button>
                            </div>
                            <div class="col-lg-3">
                                <div class="admin-infor">
                                    <div class="admin-infor__img-wrap">
                                        <img src="{{avatar}}" alt="" class="admin-infor__img">
                                    </div>
                                    <div class="admin-infor__detail">
                                        <h3 class="admin-infor__name">{{name}}</h3>
                                        <p class="admin-infor__level">Admin</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="admin-main__body">
                        <a class="text-link" href="/admin/comment">
                            <i class="fa-solid fa-left-long"></i> Quay lại
                        </a>
                        <table class="table admin-main__body-table table-hover mt-3">
                            <thead>
                                <tr class="d-flex">
                                    <th class="col-2" scope="col">Name</th>
                                    <th class="col-2" scope="col">Avatar</th>
                                    <th class="col-6" scope="col">Comment</th>
                                    <th class="col-2" scope="col" colspan="2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each comments}}
                                <tr class="d-flex">
                                    <td class="table-data col-2">{{this.name}}</td>
                                    <td class="table-data col-2">
                                        <img style="border: 1px solid #ddd;border-radius: 50%; width: 60px; height: 60px" src="{{this.avatar}} " alt="">
                                    </td>
                                    <td class="table-data col-6">{{this.comment}}</td>
                                    <td class="table-data col-2">
                                        <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">
                                            <i class="fa-solid fa-window-restore"></i>
                                        </a>
                                        <a href="" class="btn btn-link" data-id="{{this._id}}" data-bs-toggle="modal"
                                            data-bs-target="#deleteCourseModal">
                                            <i class="fa-solid fa-xmark"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="5" class="text-center">
                                        Thùng rác trống
                                    </td>
                                </tr>
                                {{/each }}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {{!-- Confirm Delete --}}
