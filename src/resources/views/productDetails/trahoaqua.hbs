<section id="menu">
    <div class="breadcumb-container">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="/menu">Tất cả sản phẩm</a></li>
                    <li class="breadcrumb-item active"> Áo quần bé trai </li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="menu-main">
        <div class="menu-item">
            <div class="common-heading pt-0">
                <div class="common-heading__img-wrap">
                    <img class="common-heading__img" src="https://concung.com/themes/desktop4.1/image/logo_home.svg" alt="">
                </div>
                <p class="common-heading__text">Áo quần bé trai</p>
            </div>
            <div class="menu-item__content">
                <div class="container">
                    <div class="drink-list"> 
                        <div class="container">
                            <div class="row">
                                {{#each productsTraHoaQua}}
                                <div class="col-lg-3 col-md-6 col-6">
                                    <div data-slug="{{this.slug}}" class="drink-item"> 
                                        <div class="drink-item__img-wrap"> 
                                            <a href="/menu/{{this.slug}}"> 
                                                <img src="{{this.image}}" alt="" class="drink-item__img">
                                            </a>
                                            <a href="/cart/{{this.slug}}" data-id="{{this._id}}" class="add-to-cart-part">
                                                <p>thêm vào giỏ hàng</p>
                                            </a>
                                        </div>
                                        <div class="drink-item__content">
                                            <h3 class="drink-item__content-heading">
                                                {{this.name}}
                                            </h3>
                                            <p class="drink-item__content-price">
                                                giá: <span class="drink-item__content-price-number">{{this.price}} đ</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>   
        <p class="tongSoPage" style="display: none">{{tongSoPage}}</p>
        <div class="menu-main__pagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item ">
                        <a class="page-link" onclick="previousTrahoaqua()" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    {{#times tongSoPage}}
                    <li class="page-item">
                        <a class="page-link page-link--number" href="?page={{sum this 1}}">
                            {{sum this 1}}
                        </a>
                    </li>
                    {{/times}}
        
                    <li class="page-item">
                        <a class="page-link" onclick="nextTraHoaQua()" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
                </div>
            </div>
        </div>
</section> 